@model Inventory.ViewModels.PaymentViewModel

@{

}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <b>Customer Payment</b>
                </div>
                <div class="card-body">
                    <form method="post" asp-area="Inventory" asp-controller="Customer" asp-action="Payment">
                        <input class="form-control" type="hidden" readonly asp-for="CusId" />

                        <div class="form-group">
                            <label asp-for="FullName"></label>
                            <input class="form-control" type="text" asp-for="FullName" readonly />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DueAmount"></label>
                            <input class="form-control" type="number" asp-for="DueAmount" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="Amount"></label>
                            <input class="form-control" type="number" asp-for="Amount" min="1" required/>
                            <span asp-validation-for="Amount" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label>Remaining Due</label>
                            <input class="form-control" type="number" id="RemainingDue"  readonly />
                        </div>
                        <button type="submit" class="btn btn-info">Save</button>
                    </form>


                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <script>
        $("document").ready(function(){
            $("#Amount").keydown(function () {
                
                var DueAmount = $("#DueAmount").val();
                var PaidAmount = $(this).val();
                var reminingDue = PaidAmount > DueAmount ? 0 : DueAmount - PaidAmount;
                var RemainingAmount = $("#RemainingDue").val(reminingDue);

            })
        })
    </script>
}